{
  "name": "static-boilerplate",
  "version": "1.0.0",
  "description": "Simple webpack static boilerplate",
  "scripts": {
    "prelint": "prettier --single-quote --no-semi --no-bracket-spacing --trailing-comma none --write \"src/**/*.js\" --write webpack.config.js",
    "lint": "xo --fix",
    "build:watch": "webpack -w --hide-modules --colors --progress",
    "serve": "browser-sync start --server \"public\" --files \"public\" --port 3000",
    "start": "run-p -r serve build:watch",
    "build": "webpack -p --hide-modules --progress",
    "precommit": "lint-staged && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/static-boilerplate.git"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/static-boilerplate/issues"
  },
  "homepage": "https://github.com/thiamsantos/static-boilerplate#readme",
  "xo": {
    "space": true,
    "semicolon": false,
    "envs": [
      "browser"
    ],
    "rules": {
      "import/no-unassigned-import": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "node-notifier": "^5.1.2",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.8.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "xo": "^0.18.2"
  }
}
